-- Test identity and computed columns
create table t2(a int, b int IDENTITY(1,1), c as a * b);
go
select name, column_id, is_identity, is_computed from sys.columns where object_id=OBJECT_ID('t2');
go
~~START~~
varchar#!#int#!#smallint#!#smallint
a#!#1#!#0#!#0
b#!#2#!#1#!#0
c#!#3#!#0#!#1
~~END~~


-- Test ansi padded columns
create table t3(a char(10), b nchar(10), c binary(10));
go
select name, column_id, is_ansi_padded from sys.columns where object_id=OBJECT_ID('t3');
go
